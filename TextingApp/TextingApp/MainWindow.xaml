        <Button x:Name="Prediction_Button" Content="Array" HorizontalAlignment="Left" Margin="483,236,0,0" VerticalAlignment="Top" Width="233" Height="62" Click="Prediction_Button_Click"/>
        <Button x:Name="Game_Button" Content="Game" HorizontalAlignment="Left" Margin="107,236,0,0" VerticalAlignment="Top" Width="232" Height="62" Click="Game_Button_Click"/>

    </Grid>
</Window>
